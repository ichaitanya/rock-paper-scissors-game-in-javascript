<!DOCTYPE html>
<html>
<head>
  <title>Coin flip</title>
</head>
<body>
  <script>
    const randomNumber = Math.random();
    
    let result;
    if (randomNumber < 0.5) {
      result = 'Heads';
    } else {
      result = 'Tails';
    }
    
    const guess = 'Tails'
    if (guess === randomNumber) {
      console.log(`You win. ${result}`)
    } else {
      console.log(`You loser. ${result}`)
    }
   </script>
</body>
</html>
